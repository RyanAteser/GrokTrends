{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "builds": [
    {
      "src": "web/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "https://groktrends.onrender.com/api/$1" },
    { "src": "^/health$",   "dest": "https://groktrends.onrender.com/health" },
    { "src": ".*",          "dest": "web/dist/index.html" }
  ],
  "ignoreCommand": "echo always-build"
}
